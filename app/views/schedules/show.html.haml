%br

%p
  %b Title:
  %br/
  = @schedule.title
%p
  %b Start time:
  %br/
  = @schedule.start_time.strftime("%Y年%m月%d日 %H:%M")
%p
  %b End time:
  %br/
  = @schedule.end_time.strftime("%Y年%m月%d日 %H:%M")
%p
  %b Note:
  %br/
  .target_blank
    = raw markdown(@schedule.note)

%br
= link_to t("menu.edit"), edit_schedule_path(@schedule), class: 'btn btn-primary'
= link_to t("menu.list"), schedules_path, class: 'btn btn-default'
