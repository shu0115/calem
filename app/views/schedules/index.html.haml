%h3= link_to(@now_date.strftime("%Y年"), schedules_path)

%ul.pagination
  %li= link_to '前年', schedules_path(now_date: @now_date.ago(1.year).to_date)
  - 1.upto(12) do |month|
    %li{ class: (@now_date.month == month ? "active" : "") }
      = link_to "#{month}月", schedules_path(now_date: "#{@now_date.year}-#{month}-01")
  %li= link_to '次年', schedules_path(now_date: @now_date.since(1.year).to_date)

